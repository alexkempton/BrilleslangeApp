<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#EEEEEE" >
    
    <TextView
    	android:id="@+id/title"
    	android:layout_width="fill_parent"
    	android:layout_height="wrap_content"
    	android:text="Bestill en bibliotekar"
    	android:textColor="#FFFFFF"
    	android:gravity="center_horizontal"
    	android:textSize="30dp" 
    	android:background="#cb2a2a"
    	/>
    	
    
    <TextView
    	android:id="@+id/topText"
    	android:layout_width="fill_parent"
    	android:layout_height="wrap_content"
    	android:text=" -  Skal du i gang med en større oppgave, et prosjekt eller en avhandling?
\n -  Har du behov for hjelp eller veiledning i forbindelse med informasjonssøking?
\n -  Trenger du veiledning i bruk av elektroniske ressurser, f.eks. en database?\n"
		android:textColor="#000000"
    	android:layout_below="@id/title" />
    
    <TextView
    	android:id="@+id/bottomText"
    	android:layout_width="fill_parent"
    	android:layout_height="wrap_content"
    	android:text="Du kan bestille en bibliotekar som setter av inntil en time til deg og din problemstilling. Foreslå tidspunkt som passer for deg; vanligvis fra kl. 9.00-15.00, mandag-fredag.\n\n
Registrér din forespørsel i skjemaet under. Vi svarer så raskt som mulig, og senest innen to virkedager.\n"
		android:textColor="#000000"
    	android:layout_below="@id/topText"/>
   
   <TextView
        android:id="@+id/username"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Brukernavn:"
        android:textColor="#000000"
        android:layout_below="@id/bottomText"/>
    
    <EditText
        android:id="@+id/bookALibrarianUsername"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@android:drawable/editbox_background"
        android:layout_below="@id/username"/>
        
   <TextView
        android:id="@+id/phone"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Telefon:"
        android:textColor="#000000"
        android:layout_below="@id/bookALibrarianUsername"/>
    
    <EditText
        android:id="@+id/bookALibrarianPhone"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@android:drawable/editbox_background"
        android:layout_below="@id/phone" />
    
   <TextView
        android:id="@+id/time"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Ønsket tidspunkt: (sett opp flere alternativer)"
        android:textColor="#000000"
        android:layout_below="@id/bookALibrarianPhone"/>
    
    <EditText
        android:id="@+id/bookALibrarianTime"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@android:drawable/editbox_background"
        android:layout_below="@id/time" />
    
   <TextView
        android:id="@+id/description"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Kort beskrivelse av din problemstilling og evt. forslag til søkeord på norsk og/eller engelsk:"
        android:textColor="#000000"
        android:layout_below="@id/bookALibrarianTime"/>
    
    <EditText
        android:id="@+id/bookALibrarianDescription"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@android:drawable/editbox_background"
        android:layout_below="@id/description" />
        
    <Button
        android:id="@+id/bookbutton"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/bookALibrarianDescription"
        android:layout_gravity="center_horizontal"
        android:layout_marginLeft="10dip"
        android:layout_marginRight="10dip"
        android:text="Book a librarian" />
    
</RelativeLayout>