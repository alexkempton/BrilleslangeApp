<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#EEEEEE">
    <include android:id="@+id/topbar" layout="@layout/topbar" android:layout_height="wrap_content" />"

	<TextView android:id="@+id/title" android:layout_width="fill_parent"
		android:layout_height="50dp" android:text="#Realfagsbiblioteket"
		android:textColor="#FFFFFF" android:gravity="center"
		android:textSize="28dp" android:background="@drawable/red_top_bar"
		android:layout_below="@id/topbar" />

    
    <ListView
        android:id="@+id/twitterlist"
        android:cacheColorHint="#00000000"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent" 
        android:layout_weight="1"
        android:divider="#B3B3B3"
        android:dividerHeight="1px"/>
</LinearLayout>
